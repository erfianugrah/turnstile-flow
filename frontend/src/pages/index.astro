---
import Layout from '../layouts/Layout.astro';
import SubmissionForm from '../components/SubmissionForm';
import { ThemeToggle } from '../components/ThemeToggle';
---

<Layout title="Forminator">
	<main class="container mx-auto px-4 py-8">
		<div class="fixed top-4 right-4 z-50">
			<ThemeToggle client:only="react" />
		</div>

		<div class="text-center mb-8">
			<h1 class="text-4xl font-bold mb-2">Forminator</h1>
			<p class="text-muted-foreground">I'm collecting all your data</p>
		</div>

		<SubmissionForm client:only="react" />

		<div class="mt-8 text-center">
			<a href="/analytics" class="text-primary hover:underline">
				View Analytics Dashboard
			</a>
		</div>
	</main>
</Layout>

<script is:inline src="https://challenges.cloudflare.com/turnstile/v0/api.js?render=explicit"></script>
